      </script>
      <script>
          const searchProduct = document.getElementById('searchproducts')
            searchProduct.addEventListener('keyup',(e)=>{
            const searchData = document.getElementById('searchproducts').value
            axios.get('/search-products?id='+searchData).then((res)=>{

              console.log(res.data,'search data')

              let div = ``

              let productsList = res.data

              console.log(productsList.length,'array length.....')
              
              let n = 0 ;

              let k = 0;

              let j = 1;

              for( let i = 0 ; i < productsList.length ; i++ ){
                
                let left =  n * 25 ;
                let top =  k * 456;

                div += `<div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item" style="position: absolute; left: ${left}%; top: ${top}px;">
                    <!-- Block2 -->
                    <div class="block2">
                      <div class="block2-pic hov-img0">
                        <a href="/user/product-details/${productsList[i]._id}"><img src="/images/uploads/${productsList[i].image[0]}" alt="IMG-PRODUCT" /></a> 
                      </div>
                      
                      <div class="block2-txt flex-w flex-t p-t-14">
                        <div class="block2-txt-child1 flex-col-l">
                          <a
                            id="wishlistproduct${productsList[i]._id}"
                            href="/user/product-details/${productsList[i]._id}"
                            class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6"
                          >
                            ${productsList[i].name}
                          </a>

                          <span class="stext-105 cl3">
                            ${productsList[i].price}&nbsp&nbsp$
                          </span>
                        </div>
                        <input type="text" value="${productsList[i]._id}" id="addtowishlist${productsList[i]._id}" hidden>
                        <div class="block2-txt-child2 flex-r p-t-3">
                          
                          <a
                            onclick ="addToWishlist('${productsList[i]._id}')"
                            class="btn-addwish-b2 dis-block pos-relative js-addwish-b2"
                          >
                              <img
                              class="icon-heart1 dis-block trans-04"
                              src="/imagescoza/icons/icon-heart-01.png"
                              alt="ICON"
                            />
                            
                            <img
                              class="icon-heart2 dis-block trans-04 ab-t-l"
                              src="/imagescoza/icons/icon-heart-02.png"
                              alt="ICON"
                            />
                          </a>
                        </div>
                      </div>
                    </div>
                  </div>`

                   if( left >= 75 ){
                     n = 0 ;
                     k++ ;
                     j++ ;
                   }else{
                    n++;
                   }

              }

                    

                    if( productsList.length !== 0){

                      divHeight = 456.05 * j;

                        document.getElementById('itemnotfound').innerHTML = 'LOAD MORE '
                        document.getElementById('itemnotfound').style.color = 'black'
                        document.getElementById('searchresults').style.height =  `${divHeight}px`
                        document.getElementById('searchresults').style.position =  "relative"
                        document.getElementById('searchresults').innerHTML  = div

                    }else{
                  
                      divHeight = 100;

                        document.getElementById('itemnotfound').style.color = 'red'
                        document.getElementById('itemnotfound').innerHTML = 'NO ITEMS FOUND !'
                        document.getElementById('searchresults').style.height =  `${divHeight}px`
                        document.getElementById('searchresults').style.position =  "relative"
                        document.getElementById('searchresults').innerHTML  = div
                    }

              
            })
          })
      </script>
