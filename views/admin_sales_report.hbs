        function salesreport (){
            event.preventDefault();

           const filter = document.getElementById('filter').value
           const fromdate = document.getElementById('fromdate').value
           const todate = document.getElementById('todate').value

            console.log(filter, fromdate, todate, 'datas..to filter....')

            axios.get(`/admin/sales-report?type=${filter}&from=${fromdate}&to=${todate}`)
            .then((res)=>{
                console.log(res.data,'response data from axios response')

                    const salesReports = res.data;

                console.log(salesReports,'response data from axios response')

                    let div = ``;
                   
                    if( salesReports.length ){

                       for( let i = 0; i < salesReports.length ; i++ ){

                        div += ` <tr>
                                    <th scope="row">${salesReports[i].id}</th>
                                    <td>${salesReports[i].total}</td>
                                    <td>${salesReports[i].Online}</td>
                                    <td>${salesReports[i].cod}</td>
                                    <td>${salesReports[i].profit}</td>
                                    <td>${salesReports[i].count}</td>
                                </tr>`
                         }

                    }

                    
                    document.getElementById('salesreportrow').innerHTML = div;

            })
        }
               

    </script>

